{
  "private": true,
  "name": "@js-modules/apps-dapp-contracts",
  "description": "Apps Dapp Contracts",
  "version": "0.0.0",
  "license": "MIT",
  "files": [
    "build"
  ],
  "scripts": {
    "dev": "pnpx hardhat --tsconfig tsconfig.build.json node",
    "build": "pnpx hardhat --tsconfig tsconfig.build.json compile",
