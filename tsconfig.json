{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "build",
    "baseUrl": "./packages"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/*/build",
  ]
}