{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "build"
  },
  "include": ["src", ".commitlintrc.js"],
  "exclude": [
    "**/node_modules",
    "**/build",
    "**/__tests__",
    "**/coverage"
  ]
}